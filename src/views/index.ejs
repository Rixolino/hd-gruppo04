    <script>
    // Funzione per recuperare i servizi dal database
    async function fetchServices() {
        try {
            // Recupera i servizi tramite API
            const response = await fetch('/api/services?limit=3');
            if (!response.ok) {
                throw new Error('Errore nel caricamento dei servizi');
            }
            
            const services = await response.json();
            if (services && services.length > 0) {
                // Elemento contenitore dei servizi
                const servicesContainer = document.querySelector('#servicesContainer');
                if (!servicesContainer) return;
                
                // Pulisce il contenitore esistente
                servicesContainer.innerHTML = '';
                
                // Crea HTML per ogni servizio
                services.forEach((service, index) => {
                    const delay = 100 + (index * 100);
                    const serviceCard = document.createElement('div');
                    serviceCard.className = 'col-md-4 mb-4';
                    serviceCard.setAttribute('data-aos', 'fade-up');
                    serviceCard.setAttribute('data-aos-delay', delay);
                    
                    serviceCard.innerHTML = `
                        <div class="card h-100 border-0 shadow-sm">
                            <div class="card-body text-center p-4">
                                <div class="rounded-circle bg-primary text-white mx-auto mb-4 d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                                    <i class="fas ${service.icon || 'fa-cogs'} fa-2x"></i>
                                </div>
                                <h3 class="h4 mb-3">${service.name}</h3>
                                <p class="text-muted">${service.description}</p>
                                <button onclick="showServiceDetails('${service.id}')" class="btn btn-outline-primary mt-2">Scopri di più</button>
                            </div>
                        </div>
                    `;
                    
                    servicesContainer.appendChild(serviceCard);
                });
                
                // Inizializza AOS per le nuove card
                if (typeof AOS !== 'undefined') {
                    AOS.refresh();
                }
            }
        } catch (error) {
            console.error('Errore durante il recupero dei servizi:', error);
        }
    }
    
    // Funzione per mostrare i dettagli del servizio
    function showServiceDetails(serviceId) {
        // Costruisci un modale con i dettagli del servizio
        fetch(`/api/services/${serviceId}`)
            .then(response => response.json())
            .then(service => {
                const modalHTML = `
                    <div class="modal fade" id="serviceModal" tabindex="-1" role="dialog" aria-labelledby="serviceModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-lg" role="document">
                            <div class="modal-content">
                                <div class="modal-header bg-primary text-white">
                                    <h5 class="modal-title" id="serviceModalLabel">${service.name}</h5>
                                    <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <div class="row">
                                        <div class="col-md-4 text-center mb-3 mb-md-0">
                                            <div class="rounded-circle bg-primary text-white mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 100px; height: 100px;">
                                                <i class="fas ${service.icon || 'fa-cogs'} fa-3x"></i>
                                            </div>
                                            <h4 class="h5 font-weight-bold">€${parseFloat(service.price).toFixed(2)}</h4>
                                            <p><small class="text-muted">Consegna: ${service.deliveryTime}</small></p>
                                            <p><small class="text-muted">Revisioni: ${service.revisions}</small></p>
                                        </div>
                                        <div class="col-md-8">
                                            <h4 class="h5 font-weight-bold mb-3">Descrizione</h4>
                                            <p>${service.description}</p>
                                            <p class="badge badge-primary">${service.category}</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Chiudi</button>
                                    <a href="/auth/login" class="btn btn-primary">Richiedi questo servizio</a>
                                </div>
                            </div>
                        </div>
                    </div>
                `;
                
                // Aggiungi il modale al documento
                const modalContainer = document.createElement('div');
                modalContainer.innerHTML = modalHTML;
                document.body.appendChild(modalContainer);
                
                // Mostra il modale
                $('#serviceModal').modal('show');
                
                // Rimuovi il modale dal DOM quando viene chiuso
                $('#serviceModal').on('hidden.bs.modal', function() {
                    document.body.removeChild(modalContainer);
                });
            })
            .catch(error => console.error('Errore durante il recupero del servizio:', error));
    }
    
    // Esegui la funzione quando il documento è completamente caricato
    document.addEventListener('DOMContentLoaded', function() {
        // Aggiungi un contenitore per i servizi se non esiste già
        const servicesSection = document.querySelector('.bg-light.py-5 .container .row');
        if (servicesSection) {
            servicesSection.id = 'servicesContainer';
        }
        
        // Recupera i servizi
        fetchServices();
    });
</script>

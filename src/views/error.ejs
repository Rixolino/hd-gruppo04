<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Errore' %> - HelpDigit</title>
    <!-- Inclusione CSS -->
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>
<body>
    <!-- Inclusione della navbar -->
    <%- include('partials/navbar') %>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm border-0">
                    <div class="card-body p-5">
                        <div class="text-center mb-4">
                            <i class="fas fa-exclamation-triangle text-danger" style="font-size: 3rem;"></i>
                        </div>
                        <h1 class="text-center mb-4">Si è verificato un errore</h1>
                        <div class="alert alert-danger">
                            <%= message || 'Si è verificato un errore imprevisto.' %>
                        </div>

                        <% if (process.env.NODE_ENV === 'development' && error) { %>
                            <div class="alert alert-secondary mt-4">
                                <h5>Dettagli errore (solo sviluppo):</h5>
                                <pre class="mb-0"><%= error.stack %></pre>
                            </div>
                        <% } %>

                        <div class="text-center mt-5">
                            <a href="/" class="btn btn-primary me-2">
                                <i class="fas fa-home me-1"></i> Torna alla home
                            </a>
                            
                            <!-- Aggiungi sempre il pulsante di logout quando showLogout è true -->
                            <% if (locals.user || locals.showLogout === true) { %>
                                <a href="/auth/logout" class="btn btn-danger ms-2">
                                    <i class="fas fa-sign-out-alt me-1"></i> Logout
                                </a>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <%- include('partials/footer') %>

    <!-- JavaScript -->
    <script src="/js/jquery.min.js"></script>
    <script src="/js/bootstrap.bundle.min.js"></script>
    <!-- Includi build.js per garantire che funzionalità come l'accessibilità siano disponibili -->
    <script src="/js/build.js"></script>
</body>
</html>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Gestione modale servizio (aggiunta/modifica)
            const serviceModal = document.getElementById('serviceModal');
            const serviceForm = document.getElementById('service-form');
            const addServiceBtn = document.getElementById('add-service-btn');
            const editServiceBtns = document.querySelectorAll('.edit-service-btn');
            const iconInput = document.getElementById('icon');
            const iconPreview = document.getElementById('icon-preview');
            const modalTitleAction = document.getElementById('modal-title-action');
            const saveButtonText = document.getElementById('save-button-text');
            const formMethod = document.getElementById('form-method');

            // Aggiorna l'anteprima dell'icona quando l'utente modifica l'input
            iconInput.addEventListener('input', function () {
                const iconClass = this.value;
                iconPreview.className = '';

                if (iconClass.startsWith('fa-')) {
                    iconPreview.className = 'fas ' + iconClass;
                } else {
                    iconPreview.className = iconClass;
                }
            });

            // Configurazione per nuovo servizio
            addServiceBtn.addEventListener('click', function () {
                modalTitleAction.textContent = 'Aggiungi';
                saveButtonText.textContent = 'Salva';
                serviceForm.reset();
                serviceForm.action = '/admin/services/create';
                formMethod.value = 'POST';
                document.getElementById('id').readOnly = false;
                iconPreview.className = 'fas fa-concierge-bell';
            });

            // Configurazione per modifica servizio
            editServiceBtns.forEach(btn => {
                btn.addEventListener('click', function () {
                    const serviceId = this.dataset.id;
                    const serviceName = this.dataset.name;
                    const serviceDescription = this.dataset.description;
                    const servicePrice = this.dataset.price;
                    const serviceCategory = this.dataset.category;
                    const serviceIcon = this.dataset.icon;
                    const serviceDeliveryTime = this.dataset.deliveryTime;
                    const serviceRevisions = this.dataset.revisions;

                    modalTitleAction.textContent = 'Modifica';
                    saveButtonText.textContent = 'Aggiorna';

                    // Imposta i valori del form
                    document.getElementById('id').value = serviceId;
                    document.getElementById('id').readOnly = true;
                    document.getElementById('name').value = serviceName;
                    document.getElementById('description').value = serviceDescription;
                    document.getElementById('price').value = servicePrice;
                    document.getElementById('category').value = serviceCategory;
                    document.getElementById('icon').value = serviceIcon;
                    document.getElementById('deliveryTime').value = serviceDeliveryTime;
                    document.getElementById('revisions').value = serviceRevisions;

                    // Aggiorna l'anteprima dell'icona
                    iconPreview.className = '';
                    if (serviceIcon.startsWith('fa-')) {
                        iconPreview.className = 'fas ' + serviceIcon;
                    } else {
                        iconPreview.className = serviceIcon;
                    }

                    // Aggiorna l'action del form e il metodo
                    serviceForm.action = `/admin/services/edit/${serviceId}`;
                    formMethod.value = 'PUT';
                });
            });

            // Gestione modale conferma eliminazione
            const deleteServiceBtns = document.querySelectorAll('.delete-service-btn');
            const deleteForm = document.getElementById('delete-form');
            const deleteServiceName = document.getElementById('delete-service-name');

            deleteServiceBtns.forEach(btn => {
                btn.addEventListener('click', function () {
                    const serviceId = this.dataset.id;
                    const serviceName = this.dataset.name;

                    deleteServiceName.textContent = serviceName;
                    deleteForm.action = `/admin/services/delete/${serviceId}`;

                    $('#deleteConfirmModal').modal('show');
                });
            });

            // Gestione filtri
            const applyFiltersBtn = document.getElementById('apply-filters');
            const filterCategory = document.getElementById('filter-category');
            const filterName = document.getElementById('filter-name');
            const serviceRows = document.querySelectorAll('.service-row');

            applyFiltersBtn.addEventListener('click', function () {
                const categoryFilter = filterCategory.value.toLowerCase();
                const nameFilter = filterName.value.toLowerCase();

                serviceRows.forEach(row => {
                    const rowCategory = row.dataset.category;
                    const rowName = row.dataset.name;

                    const matchCategory = !categoryFilter || rowCategory === categoryFilter;
                    const matchName = !nameFilter || rowName.includes(nameFilter);

                    if (matchCategory && matchName) {
                        row.style.display = '';
                    } else {
                        row.style.display = 'none';
                    }
                });
            });

            // Gestione sidebar su mobile e responsive
            const sidebarToggleBtn = document.getElementById('sidebar-toggle');
            const sidebar = document.querySelector('.sidebar');
            const mainContent = document.querySelector('.main-content');

            // Crea un overlay per la sidebar mobile
            const overlay = document.createElement('div');
            overlay.className = 'sidebar-overlay';
            document.body.appendChild(overlay);

            // Verifica se c'è una preferenza salvata
            const isSidebarCollapsed = localStorage.getItem('sidebarCollapsed') === 'true';

            // Applica stato iniziale
            if (isSidebarCollapsed) {
                sidebar.classList.add('collapsed');
                mainContent.classList.add('sidebar-collapsed');
                sidebarToggleBtn.innerHTML = '<i class="fas fa-expand"></i>';
                sidebarToggleBtn.setAttribute('title', 'Espandi menu');
            }

            sidebarToggleBtn.addEventListener('click', function () {
                if (window.innerWidth <= 768) {
                    // Comportamento per dispositivi mobili (toggle active/non-active)
                    sidebar.classList.toggle('active');
                    overlay.classList.toggle('active');

                    // Impedisci lo scroll del body quando la sidebar è aperta
                    if (sidebar.classList.contains('active')) {
                        document.body.style.overflow = 'hidden';
                    } else {
                        document.body.style.overflow = '';
                    }
                } else {
                    // Comportamento desktop (collapsed/non-collapsed)
                    sidebar.classList.toggle('collapsed');
                    mainContent.classList.toggle('sidebar-collapsed');

                    const isNowCollapsed = sidebar.classList.contains('collapsed');

                    // Aggiorna l'icona e il tooltip
                    if (isNowCollapsed) {
                        sidebarToggleBtn.innerHTML = '<i class="fas fa-expand"></i>';
                        sidebarToggleBtn.setAttribute('title', 'Espandi menu');
                    } else {
                        sidebarToggleBtn.innerHTML = '<i class="fas fa-compress"></i>';
                        sidebarToggleBtn.setAttribute('title', 'Comprimi menu');
                    }

                    // Salva la preferenza
                    localStorage.setItem('sidebarCollapsed', isNowCollapsed);
                }

                // Aggiorna il layout del footer
                updateFooterLayout();
            });

            // Chiudi la sidebar quando si clicca sull'overlay
            overlay.addEventListener('click', function () {
                sidebar.classList.remove('active');
                overlay.classList.remove('active');
                document.body.style.overflow = '';

                // Aggiorna il layout del footer quando si chiude la sidebar con l'overlay
                updateFooterLayout();
            });

            // Gestisci la responsività quando si ridimensiona la finestra
            window.addEventListener('resize', function () {
                if (window.innerWidth > 768) {
                    // Passa alla modalità desktop
                    overlay.classList.remove('active');
                    document.body.style.overflow = '';

                    if (sidebar.classList.contains('active')) {
                        sidebar.classList.remove('active');
                    }
                }

                // Aggiorna il layout del footer quando si ridimaensiona la finestra
                updateFooterLayout();
            });

            // Funzione per aggiornare il layout del footer
            function updateFooterLayout() {
                const footer = document.querySelector('.modern-footer');

                if (!footer) return; // Se il footer non è presente, esci dalla funzione

                // Gestisci la posizione del footer in base allo stato della sidebar
                if (window.innerWidth > 768) {
                    // Su desktop
                    if (sidebar.classList.contains('collapsed')) {
                        // Sidebar compressa
                        footer.style.marginLeft = '60px';
                        footer.style.width = 'calc(100% - 60px)';
                    } else {
                        // Sidebar espansa
                        footer.style.marginLeft = '250px';
                        footer.style.width = 'calc(100% - 250px)';
                    }
                } else {
                    // Su mobile
                    footer.style.marginLeft = '0';
                    footer.style.width = '100%';
                }
            }

            // Imposta il layout iniziale del footer se è già presente
            setTimeout(updateFooterLayout, 100);

            // Gestione del selettore di icone
            const iconPicker = document.getElementById('icon-picker');
            const openIconPickerBtn = document.getElementById('open-icon-picker');
            const iconItems = document.querySelectorAll('.icon-item');
            const iconSearch = document.getElementById('icon-search');
            const categoryButtons = document.querySelectorAll('.icon-picker-categories button');

            // Apertura e chiusura del selettore
            openIconPickerBtn.addEventListener('click', function () {
                iconPicker.classList.toggle('d-none');
            });

            // Chiusura del selettore quando si clicca fuori
            document.addEventListener('click', function (event) {
                if (!event.target.closest('#icon-picker') &&
                    !event.target.closest('#open-icon-picker') &&
                    !iconPicker.classList.contains('d-none')) {
                    iconPicker.classList.add('d-none');
                }
            });

            // Selezione dell'icona
            iconItems.forEach(item => {
                item.addEventListener('click', function () {
                    const iconClass = this.dataset.icon;

                    // Rimuovi la selezione precedente
                    document.querySelectorAll('.icon-item.selected').forEach(el => {
                        el.classList.remove('selected');
                    });

                    // Aggiungi la classe selected all'icona selezionata
                    this.classList.add('selected');

                    // Aggiorna l'input e l'anteprima
                    iconInput.value = iconClass;
                    iconPreview.className = 'fas ' + iconClass;

                    // Chiudi il selettore
                    iconPicker.classList.add('d-none');
                });
            });

            // Ricerca icone
            iconSearch.addEventListener('input', function () {
                const searchTerm = this.value.toLowerCase();

                iconItems.forEach(item => {
                    const iconName = item.dataset.icon.toLowerCase();

                    if (iconName.includes(searchTerm) || searchTerm === '') {
                        item.style.display = 'flex';
                    } else {
                        item.style.display = 'none';
                    }
                });
            });

            // Filtro per categorie
            categoryButtons.forEach(btn => {
                btn.addEventListener('click', function () {
                    const category = this.dataset.category;

                    // Aggiorna i pulsanti attivi
                    categoryButtons.forEach(b => {
                        b.classList.remove('btn-primary');
                        b.classList.add('btn-outline-primary');
                        b.classList.remove('active');
                    });
                    this.classList.remove('btn-outline-primary');
                    this.classList.add('btn-primary');
                    this.classList.add('active');

                    // Mostra/nascondi gruppi in base alla categoria
                    if (category === 'all') {
                        document.querySelectorAll('.icon-group').forEach(group => {
                            group.style.display = 'block';
                        });
                    } else {
                        document.querySelectorAll('.icon-group').forEach(group => {
                            if (group.dataset.category === category) {
                                group.style.display = 'block';
                            } else {
                                group.style.display = 'none';
                            }
                        });
                    }
                });
            });
        });
    </script>

                                                                        data-progress="<%= order.progressoLavoro %>">
                                                                        <i class="fas fa-edit"></i>
                                                                    </button>
                                                                    <a href="/orders/<%= order.id %>"
                                                                        class="btn btn-sm btn-outline-info"
                                                                        target="_blank">
                                                                        <i class="fas fa-eye"></i>
                                                                    </a>
                                                                    <button type="button"
                                                                        class="btn btn-sm btn-outline-secondary dropdown-toggle dropdown-toggle-split"
                                                                        data-toggle="dropdown" aria-haspopup="true"
                                                                        aria-expanded="false">
                                                                        <span class="sr-only">Azioni</span>
                                                                    </button>
                                                                    <div class="dropdown-menu dropdown-menu-right">
                                                                        <a class="dropdown-item" href="#"><i
                                                                                class="fas fa-file-invoice mr-2"></i>
                                                                            Dettagli fattura</a>
                                                                        <a class="dropdown-item" href="#"><i
                                                                                class="fas fa-envelope mr-2"></i>
                                                                            Contatta cliente</a>
                                                                        <div class="dropdown-divider"></div>
                                                                        <a class="dropdown-item text-danger" href="#"><i
                                                                                class="fas fa-trash-alt mr-2"></i>
                                                                            Elimina</a>
                                                                    </div>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                        <% }); %>
                                                            <% } else { %>
                                                                <tr>
                                                                    <td colspan="8" class="text-center py-4">
                                                                        <div class="my-5">
                                                                            <i
                                                                                class="fas fa-inbox fa-3x text-muted mb-3"></i>
                                                                            <p class="text-muted">Nessun ordine trovato
